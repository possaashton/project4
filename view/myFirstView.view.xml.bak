<mvc:View controllerName="project4.controller.myFirstView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>Multi-DB User Manager}">
    <content>
            <VBox class="sapUiSmallMargin" id="content1">
                
                <!-- User Inputs -->
                <Label text="User Code" id="lblUserCode"/>
                <Input id="ipUserCode" placeholder="Enter User Code"/>

                <Label text="User Name" id="lblUserName"/>
                <Input id="ipUserName" placeholder="Enter User Name"/>

                <!-- Database Selection -->
                <Label text="Select Databases" id="lblDatabases"/>
                <MultiComboBox
                    id="mcbDBSelector"
                    placeholder="Select one or more databases..."
                    items="{SAPB1DB>/SAPB1DB}">
                    <core:Item id="dbItems" key="{SAPB1DB>ProductID}" 
                        text="{SAPB1DB>Name}" xmlns:core="sap.ui.core"/>
                </MultiComboBox>

                <!-- User Group / Authorization Selection -->
                <Label text="Select Authorizations" id="lblAuthGroups"/>
                <MultiComboBox
                    id="mcbAuthorization"
                    placeholder="Select one or more Authorization..."
                    items="{UserAuthorization>/UserAuthorization}">
                    <core:Item id="itmAuthorization" key="{UserAuthorization>AuthorizationID}" 
                        text="{UserAuthorization>Name}" xmlns:core="sap.ui.core"/>
                </MultiComboBox>

                <!-- Boyum License Checkbox -->
                <CheckBox id="chkBoyumLicense" text="Assign Boyum License"/>
                              

                <!-- Update Button -->
                <Button id="btnUpdateUser" text="Update User" press=".onUpdateUser" class="sapUiSmallMarginTop"/>
                
            </VBox>
        </content>
    </Page>
</mvc:View>